<!DOCTYPE html>
<html>
<head>
  <title>Table Content</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
  <div class="container">
    <h1>Table: Users</h1>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Password</th>
          <th>Nickname</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% for (let i = 0; i < tableData.length; i++) { %>
          <tr>
            <td><%= tableData[i].firstname %></td>
            <td><%= tableData[i].lastname %></td>
            <td><%= tableData[i].email %></td>
            <td><%= tableData[i].password %></td>
            <td><%= tableData[i].nickname %></td>
            <td>
              <button type="button" class="btn btn-primary btn-edit" data-id="<%= tableData[i].id %>">Edit</button>
              <button type="button" class="btn btn-danger btn-delete" data-id="<%= tableData[i].id %>">Delete</button>
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>
    <button type="button" class="btn btn-success btn-add">Add Record</button>
  </div>
  <div class="modal fade" id="modal-form" tabindex="-1" role="dialog" aria-labelledby="modal-form-label" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <form id="form-record">
          <div class="modal-header">
            <h5 class="modal-title" id="modal-form-label">Add Record</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <div class="form-group">
              <label for="input-firstname">First Name</label>
              <input type="text" class="form-control" id="input-firstname" name="firstname" required>
            </div>
            <div class="form-group">
              <label for="input-lastname">Last Name</label>
              <input type="text" class="form-control" id="input-lastname" name="lastname" required>
            </div>
            <div class="form-group">
              <label for="input-email">Email</label>
              <input type="email" class="form-control" id="input-email" name="email" required>
            </div>
            <div class="form-group">
              <label for="input-password">Password</label>
              <input type="password" class="form-control" id="input-password" name="password" required>
            </div>
            <div class="form-group">
              <label for="input-nickname">Nickname</label>
              <input type="text" class="form-control" id="input-nickname" name="nickname" required>
            </div>
          </div>
          <div class="modal-footer">
           
            <input type="hidden" id="input-record-id" name="id">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script>
    function populateTable() {
      $.ajax({
        url: '/api/users',
        method: 'GET',
        success: function(data) {
          $('tbody').empty();

          data.forEach(function(record) {
            var row = $('<tr>');
            row.append('<td>' + record.firstname + '</td>');
            row.append('<td>' + record.lastname + '</td>');
            row.append('<td>' + record.email + '</td>');
            row.append('<td>' + record.password + '</td>');
            row.append('<td>' + record.nickname + '</td>');
            row.append('<td><button type="button" class="btn btn-primary btn-edit" data-id="' + record.id + '">Edit</button> <button type="button" class="btn btn-danger btn-delete" data-id="' + record.id + '">Delete</button></td>');
            $('tbody').append(row);
          });
        },
        error: function(error) {
          console.log(error);
        }
      });
    }

    function addRecord(data) {
      $.ajax({
        url: '/api/users',
        method: 'POST',
        data: data,
        success: function() {
          $('#modal-form').modal('hide');
          populateTable();
        },
        error: function(error) {
          console.log(error);
        }
      });
    }

    function deleteRecord(id) {
      $.ajax({
        url: '/api/users/' + id,
        method: 'DELETE',
        success: function() {
          populateTable();
        },
        error: function(error) {
          console.log(error);
        }
      });
    }

    function updateRecord(id, data) {
      $.ajax({
        url: '/api/users/' + id,
        method: 'PUT',
        data: data,
        success: function() {
          $('#modal-form').modal('hide');
          populateTable();
        },
        error: function(error) {
          console.log(error);
        }
      });
    }

    $(document).ready(function() {
      populateTable();

      $('.btn-add').click(function() {
        $('#modal-form').modal('show');
        $('#form-record').trigger('reset');
        $('#modal-form-label').text('Add Record');
        $('#input-record-id').val('');
      });

      $(document).on('click', '.btn-edit', function() {
  var id = $(this).data('id');
  $('#modal-form').modal('show');
  $('#modal-form-label').text('Edit User');

  $.ajax({
    url: '/api/users/' + id,
    method: 'GET',
    success: function(data) {
      $('#input-field-1').val(data.firstname);
      $('#input-field-2').val(data.lastname);
      $('#input-field-3').val(data.email);
      $('#input-field-4').val(data.password);
      $('#input-field-5').val(data.nickname);
      // Update the form action URL
      $('#form-record').attr('action', '/api/users/' + id);
    },
    error: function(error) {
      console.log(error);
    }
  });
});

      // Add event handler for form submission
      $('#form-record').submit(function(event)
{
event.preventDefault();
var id = $('#input-record-id').val();
var data = {
firstname: $('#input-firstname').val(),
lastname: $('#input-lastname').val(),
email: $('#input-email').val(),
password: $('#input-password').val(),
nickname: $('#input-nickname').val()
};
if (id) {
      // Update existing record
      updateRecord(id, data);
    } else {
      // Add new record
      addRecord(data);
    }
  });

  $(document).on('click', '.btn-delete', function() {
    var id = $(this).data('id');
    deleteRecord(id);
  });
});
</script>
</body>
</html>