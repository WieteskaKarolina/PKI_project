<!DOCTYPE html>
<html>
<head>
  <title>Table Content</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
  <div class="container">
    <h1>Table: <%= tableName %></h1>
    <table class="table table-striped">
      <thead>
        <tr>
          <% for (let column in tableData[0]) { %>
            <th><%= column %></th>
          <% } %>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% for (let i = 0; i < tableData.length; i++) { %>
          <tr>
            <% for (let column in tableData[i]) { %>
              <td><%= tableData[i][column] %></td>
            <% } %>
            <td>
              <button type="button" class="btn btn-primary btn-edit" data-id="<%= tableData[i].ID %>">Edit</button>
              <button type="button" class="btn btn-danger btn-delete" data-id="<%= tableData[i].ID %>">Delete</button>
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>
    <button type="button" class="btn btn-success btn-add">Add Record</button>
  </div>
  <div class="modal fade" id="modal-form" tabindex="-1" role="dialog" aria-labelledby="modal-form-label" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <form id="form-record">
          <div class="modal-header">
            <h5 class="modal-title" id="modal-form-label">Add Record</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <!-- Add the input fields for the record fields of the respective table -->
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script>
    function populateTable() {
      $.ajax({
        url: '/api/users', // Change the URL to '/api/users' for the "Users" table
        method: 'GET',
        success: function(data) {
          $('tbody').empty();
      
      data.forEach(function(record) {
        var row = $('<tr>');
        for (var key in record) {
          if (record.hasOwnProperty(key)) {
            var cell = $('<td>').text(record[key]);
            row.append(cell);
          }
        }
        row.append('<td><button type="button" class="btn btn-primary btn-edit" data-id="' + record.ID + '">Edit</button> <button type="button" class="btn btn-danger btn-delete" data-id="' + record.ID + '">Delete</button></td>');
        $('tbody').append(row);
      });
    },
    error: function(error) {
      console.log(error);
    }
  });
}

function addRecord(data) {
  $.ajax({
    url: '/api/users', // Change the URL to '/api/users' for the "Users" table
    method: 'POST',
    data: data,
    success: function() {
      $('#modal-form').modal('hide');
      populateTable();
    },
    error: function(error) {
      console.log(error);
    }
  });
}

function deleteRecord(id) {
  $.ajax({
    url: '/api/users/' + id, // Change the URL to '/api/users/' + id for the "Users" table
    method: 'DELETE',
    success: function() {
      populateTable();
    },
    error: function(error) {
      console.log(error);
    }
  });
}

function updateRecord(id, data) {
  $.ajax({
    url: '/api/users/' + id, // Change the URL to '/api/users/' + id for the "Users" table
    method: 'PUT',
    data: data,
    success: function() {
      $('#modal-form').modal('hide');
      populateTable();
    },
    error: function(error) {
      console.log(error);
    }
  });
}

$(document).ready(function() {
  populateTable();

  $('.btn-add').click(function() {
    $('#modal-form').modal('show');
    $('#form-record').trigger('reset');
    $('#modal-form-label').text('Add Record');
  });

  $(document).on('click', '.btn-edit', function() {
    var id = $(this).data('id');
    $('#modal-form').modal('show');
    $('#modal-form-label').text('Edit Record');

    $.ajax({
      url: '/api/users/' + id, // Change the URL to '/api/users/' + id for the "Users" table
      method: 'GET',
      success: function(data) {
        // Set the input field values for the respective record fields
      },
      error: function(error) {
        console.log(error);
      }
    });
  });

  // Add event handler for form submission
  $('#form-record').submit(function(event) {
    event.preventDefault();
    var formData = $(this).serialize();
    var id = $(this).data('id');

    if (id) {
      updateRecord(id, formData);
    } else {
      addRecord(formData);
    }
  });

  // Add event handler for record deletion
  $(document).on('click', '.btn-delete', function() {
    var id = $(this).data('id');
    deleteRecord(id);
  });
});
</script>
</body>
</html>